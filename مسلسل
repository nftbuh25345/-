<body>

<div class="player">
  <video id="video" autoplay muted playsinline>
    <source id="videoSource" src="https://pixeldrain.com/api/file/zgujsooG" type="video/mp4">
  </video>

  <div class="controls">
    <div class="progress-container" onclick="seek(event)">
      <div class="progress" id="progress"></div>
    </div>
    <div class="buttons">
      <div>
        <button class="btn" onclick="togglePlay()">‚èØÔ∏è</button>
        <button class="btn" onclick="toggleMute()">üîà</button>
        <button class="btn" onclick="toggleFullscreen()">‚õ∂</button>
      </div>
      <div>
        <select id="quality" class="quality-select">
          <option value="480">480p</option>
          <option value="720">720p</option>
        </select>
      </div>
    </div>
  </div>
</div>

<script>
  const video = document.getElementById("video");
  const progress = document.getElementById("progress");
  const videoSource = document.getElementById("videoSource");
  const quality = document.getElementById("quality");

  // ÿ™ÿ≠ÿØŸäÿ´ ÿ¥ÿ±Ÿäÿ∑ ÿßŸÑÿ™ŸÇÿØŸÖ
  video.addEventListener("timeupdate", () => {
    const percent = (video.currentTime / video.duration) * 100;
    progress.style.width = percent + "%";
  });

  // ÿßŸÑÿ™ŸÜŸÇŸÑ ÿØÿßÿÆŸÑ ÿßŸÑŸÅŸäÿØŸäŸà
  function seek(e) {
    const bar = e.currentTarget;
    const clickX = e.offsetX;
    const width = bar.offsetWidth;
    const duration = video.duration;
    video.currentTime = (clickX / width) * duration;
  }

  function togglePlay() {
    if (video.paused) {
      video.play();
    } else {
      video.pause();
    }
  }

  function toggleMute() {
    video.muted = !video.muted;
  }

  function toggleFullscreen() {
    if (!document.fullscreenElement) {
      video.requestFullscreen();
    } else {
      document.exitFullscreen();
    }
  }

  quality.addEventListener("change", () => {
    const currentTime = video.currentTime;
    const isPaused = video.paused;
    if (quality.value === "480") {
      videoSource.src = "https://pixeldrain.com/api/file/zgujsooG";  // ÿ±ÿßÿ®ÿ∑ 480p ÿßŸÑÿ¨ÿØŸäÿØ
    } else {
      videoSource.src = "https://pixeldrain.com/api/file/uEJxvGqd";  // ÿ±ÿßÿ®ÿ∑ 720p ÿßŸÑÿ¨ÿØŸäÿØ
    }
    video.load();
    video.currentTime = currentTime;
    if (!isPaused) video.play();
  });
</script>

